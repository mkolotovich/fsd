include ../range-slider/range-slider.pug
include ../button/button.pug
include ../pagination/pagination.pug
- var withIcon = false;
ul(class="preview-text-field").form-elements-right-column 
  +range-slider('Range Slider','5 000₽ - 10 000₽')(class="form-elements-right-column__item form-elements-right-column__item__item_two-third-width")
  li(class="form-elements-right-column__item form-elements-right-column__item_buttons")
    .preview-text-field__wrap 
      b.preview-text-field__item-name| buttons
    ul.buttons
      +button('CLICK ME', 'button_filled')
      +button('CLICK ME', 'button_filled button_filled-hover')
      +button('CLICK ME', 'button_bordered')
      +button('CLICK ME', 'button_bordered button_bordered-hover')
      li
        ul.buttons-list
          +button('CLICK ME', 'button_small')
          +button('CLICK ME', 'button_small button_small-hover')
  - var withIcon = true;
  +button('перейти к оплате', 'button_filled')(class="form-elements-right-column__item form-elements-right-column__item_full-width")
  +pagination('pagination','1','2','3','...')(class="form-elements-right-column__item form-elements-right-column__item__item_two-third-width")