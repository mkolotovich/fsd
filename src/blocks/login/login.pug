include ../preview-text-field/preview-text-field.pug
include ../../blocks/preview-fonts/preview-fonts.pug
include ../radio-buttons/radio-buttons.pug
include ../date-picker/date-picker.pug
include ../toggle/toggle.pug
- var withoutIcon = true;
mixin login(name, label, label1, label2)
  li(class!=attributes.class)
    ul.login
      +preview-fonts("", name)(class="preview-fonts__item preview-fonts__item_h1")
      +preview-text-field('', '', 'Email')(class="preview-text-field__item")
      +preview-text-field('', '', 'Пароль')(class="preview-text-field__item")
      +button('войти', 'button_filled')(class="form-elements-right-column__item form-elements-right-column__item_full-width")
      li.registration__item
        ul.registration__list
          +preview-fonts("Body", "Нет аккаунта на Toxin")(class="preview-fonts__item preview-fonts__item_body")
          +button('создать', 'button_bordered')(class="form-elements-right-column__item form-elements-right-column__item_full-width")