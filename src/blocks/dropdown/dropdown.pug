mixin dropdown(name, style, label, label1, value1, label2, value2, label3, value3, label4)
  li(class!=attributes.class)
    i(class='material-icons') expand_more
    .preview-text-field__wrap 
      b.preview-text-field__item-name= name
      span.preview-text-field__item-style= style
    select(class='preview-text-field__item-input preview-text-field__item-input_dropdown js-example-basic-single' name="state")
      if lessThanOne
        option(label=label value=label)=label
      else
        option(label=label)
        option(label=label1 value=value1)=label1
        option(label=label2 value=value2)=label2
        option(label=label3 value=value3)=label3
        option(label=label4)=label4