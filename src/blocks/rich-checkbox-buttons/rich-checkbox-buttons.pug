mixin rich-checkbox-buttons(name, header, label, header1, label1)
  li(class!=attributes.class)
    b.form-elements-center-column__item-name= name
    ul(class='checkbox-list')
      li
        label
          input(type="checkbox")
          span(class='checkbox-list__custom-checkbox')
          span
            b=header
            span(class='checkbox-list__description')=label
      li
        label
          input(type="checkbox")
          span(class='checkbox-list__custom-checkbox')
          span
            b=header1
            span(class='checkbox-list__description')=label1